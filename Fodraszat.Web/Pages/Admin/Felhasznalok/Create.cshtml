@page
@model Fodraszat.Web.Pages.Admin.Felhasznalok.CreateModel

@{
    ViewData["Title"] = "Létrehozás";
}

<h1>@ViewData["Title"]</h1>

<h4>Felhasználó</h4>
<hr />
<div class="row">
    <div class="col-md-5">
        <form method="post">
            <h4>Helyi fiók regisztrálása</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RegisztracioModel.Email"></label>
                <input asp-for="RegisztracioModel.Email" class="form-control" />
                <span asp-validation-for="RegisztracioModel.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RegisztracioModel.DateOfBirth"></label>
                <input asp-for="RegisztracioModel.DateOfBirth" class="form-control" />
                <span asp-validation-for="RegisztracioModel.DateOfBirth" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RegisztracioModel.FullName"></label>
                <input asp-for="RegisztracioModel.FullName" class="form-control" />
                <span asp-validation-for="RegisztracioModel.FullName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RegisztracioModel.PhoneNumber"></label>
                <input asp-for="RegisztracioModel.PhoneNumber" class="form-control" />
                <span asp-validation-for="RegisztracioModel.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RegisztracioModel.Password"></label>
                <input asp-for="RegisztracioModel.Password" class="form-control" />
                <span asp-validation-for="RegisztracioModel.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RegisztracioModel.ConfirmPassword"></label>
                <input asp-for="RegisztracioModel.ConfirmPassword" class="form-control" />
                <span asp-validation-for="RegisztracioModel.ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Létrehozása</button>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Vissza</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
