@page
@model Fodraszat.Web.Pages.FodraszokModel
@{
    ViewData["Title"] = "Fodrászaink";
}

<h1>@ViewData["Title"]</h1>
<hr />

<div class="row">
    @if (Model.Fodraszok.Count > 0)
    {
        @foreach (var fodrasz in Model.Fodraszok)
        {
            <div class="col-sm-4">
                <div class="card">
                    <img src="~/profile/@(fodrasz.Profilkep ?? "default.jpg")" class="card-img-top" alt="@fodrasz.Nev">
                    <div class="card-body">
                        <h5 class="card-title">@fodrasz.Nev</h5>
                        <p class="card-text">@Html.Raw(fodrasz.Leiras)</p>
                        <a asp-page="/Felhasznalo/Foglalas" asp-route-fodrasz="@fodrasz.Id" class="btn btn-primary">Időpont foglalás</a>
                    </div>
                </div>
            </div>


        }
    }
    else
    {
        <div class="alert alert-warning" role="alert">
            Jelenleg nem található egy fodrász se
        </div>
    }
</div>