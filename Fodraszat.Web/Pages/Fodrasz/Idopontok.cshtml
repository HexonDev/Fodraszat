@page
@model Fodraszat.Web.Pages.Fodrasz.IdopontokModel
@{
    ViewData["Title"] = "Időpontot foglalt vendégek";
}

<h1>@ViewData["Title"]</h1>

<table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Idopontok[0].Datum)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Idopontok[0].FodraszNev)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Idopontok[0].SzolgaltatasNev)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Idopontok[0].SzolgaltatasHossz)
        </th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.Idopontok) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Datum)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FodraszNev)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SzolgaltatasNev)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SzolgaltatasHossz) perc
            </td>
        </tr>
    }
    </tbody>
</table>
