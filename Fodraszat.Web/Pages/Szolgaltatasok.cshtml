@page
@model Fodraszat.Web.Pages.SzolgaltatasokModel
@{
    ViewData["Title"] = "Szolgáltatások";
}

<h1>@ViewData["Title"]</h1>

@if (Model.Szolgaltatasok.Count > 0)
{
    <ul>
        @foreach (var szolgaltatas in Model.Szolgaltatasok)
        {
            <li>@szolgaltatas.Nev: @szolgaltatas.Ar Ft - @szolgaltatas.Idotartam perc</li>
        }
    </ul>
}
else
{
    <div class="alert alert-warning" role="alert">
        Jelenleg nincs elérhető szolgáltatás
    </div>
}
