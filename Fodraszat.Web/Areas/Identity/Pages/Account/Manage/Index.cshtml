@page
@model IndexModel
@{
    ViewData["Title"] = "Profil";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h4>@ViewData["Title"]</h4>
<partial name="_StatusMessage" model="Model.StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Username"></label>
                <input asp-for="Username" class="form-control" disabled />
            </div>
            <div class="form-group">
                <label asp-for="Input.Nev"></label>
                <input asp-for="Input.Nev" class="form-control" />
                <span asp-validation-for="Input.Nev" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.SzuletesiIdo"></label>
                <input asp-for="Input.SzuletesiIdo" class="form-control" />
                <span asp-validation-for="Input.SzuletesiIdo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.PhoneNumber"></label>
                <input asp-for="Input.PhoneNumber" class="form-control" />
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Profilkep"></label>
                <input asp-for="Input.Profilkep" type="file" class="form-control" />
                <span asp-validation-for="Input.Profilkep" class="text-danger"></span>
            </div>
            <button id="update-profile-button" type="submit" class="btn btn-primary">Mentés</button>
        </form>
    </div>
    
    <div class="col-md-6">
        <img src="~/profile/@(Model.Input.ProfilkepUtvonal ?? "default.jpg")" width="300" height="300" class="img-thumbnail" alt="Profilkép" />
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}